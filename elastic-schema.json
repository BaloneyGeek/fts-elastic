{
    "settings": {
      "number_of_shards": 10,
      "number_of_replicas": 0
    },
    "mappings": {
      "_source":  {
        "enabled": false
      },
      "properties": {
        "user":   {"type": "keyword"},
        "box":    {"type": "keyword"},
        "uid":    {"type": "integer"},
        "from":   {"type": "text"},
        "sender": {"type": "text"},
        "to":     {"type": "text"},
        "cc":     {"type": "text"},
        "bcc":    {"type": "text"},
        "subject":{"type": "text"},
        "body":   {"type": "text"},
        "date":   {
          "type": "date",
          "format": "EEE, d LLL yyyy HH:mm:ss Z||yyyy-MM-dd HH:mm:ss||yyyy-MM-dd"
        }
      }
    }
  }